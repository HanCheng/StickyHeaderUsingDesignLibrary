<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/text_for_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:text="Testing header for 1st placeHolder"/>

    <View
        android:id="@+id/separator_one"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_color" />

    <TextView
        android:id="@+id/text_for_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:text="Testing header for 2nd placeHolder"/>

    <View
        android:id="@+id/separator_two"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_color" />

    <TextView
        android:id="@+id/text_for_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingBottom="8dp"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:text="Testing header for 3rd placeHolder"/>

</LinearLayout>